<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="Ain Minhaix Compraix"
        android:textSize="54sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_myLists"
        android:layout_width="272dp"
        android:layout_height="154dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_title"
        app:srcCompat="@drawable/minhaslistas" />

    <ImageButton
        android:id="@+id/btn_newList"
        android:layout_width="262dp"
        android:layout_height="145dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_myLists"
        app:srcCompat="@drawable/novalista" />

    <ImageButton
        android:id="@+id/btn_addItem"
        android:layout_width="200dp"
        android:layout_height="118dp"
        android:layout_marginStart="40dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_newList"
        app:srcCompat="@drawable/adicionaritem" />

</androidx.constraintlayout.widget.ConstraintLayout>